{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2018",
    "outDir": "build",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["src/utils/*"]
    },
    "typeRoots": ["./node_modules/@types", "src/types"]
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
